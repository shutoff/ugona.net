<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="5dp" android:shape="rectangle">
            <solid android:color="#000000" />
            <stroke android:width="1dp" android:color="#808080" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:padding="5dp" android:shape="rectangle">
            <solid android:color="#404040" />
            <stroke android:width="1dp" android:color="#808080" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp" />
        </shape>
    </item>
</selector>