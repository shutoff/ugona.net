<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="root">

    <EditTextPreference
        android:title="@string/name"
        android:key="name_" />

    <Preference
        android:summary="@string/auth_summary"
        android:title="@string/auth"
        android:key="api_key" />

    <Preference
        android:summary="@string/phone_number_summary"
        android:title="@string/phone_number"
        android:key="phone" />

    <ListPreference
        android:title="@string/alarm_mode"
        android:summary="@string/sms_mode_summary"
        android:entryValues="@array/alarm_mode_values"
        android:entries="@array/alarm_mode"
        android:key="call_mode" />

    <Preference
        android:title="@string/main_phone"
        android:summary="@string/init_phone"
        android:key="main_phone" />

    <Preference
        android:title="@string/phones"
        android:summary="@string/phones_sum"
        android:key="phones" />

    <net.ugona.plus.SeekBarPreference
        android:title="@string/shock_sens"
        android:key="shock_sens"
        android:max="5"
        android:defaultValue="5" />

    <Preference
        android:title="@string/timer"
        android:summary="@string/timer_sum"
        android:key="timer" />

    <Preference
        android:title="@string/commands"
        android:summary="@string/commands_sum"
        android:key="cmd" />

    <Preference
        android:title="@string/rele"
        android:summary="@string/rele_sum"
        android:key="rele" />

    <CheckBoxPreference
        android:title="@string/show_balance"
        android:defaultValue="true"
        android:key="show_balance" />

    <ListPreference
        android:title="@string/balance_notification"
        android:key="balance_limit"
        android:entries="@array/balance_limit"
        android:entryValues="@array/balance_values" />

    <CheckBoxPreference
        android:title="@string/show_photo"
        android:key="show_photo" />

    <Preference
        android:title="@string/scan_mode"
        android:key="scan" />

    <Preference
        android:title="@string/alarm_sound"
        android:summary="@string/def"
        android:key="alarm" />

    <Preference
        android:title="@string/alarm_test"
        android:summary="@string/alarm_test_sum"
        android:key="alarm_test" />

    <Preference
        android:title="@string/notify_sound"
        android:summary="@string/def"
        android:key="notify" />

    <net.ugona.plus.SeekBarPreference
        android:title="@string/temp_correct"
        android:key="tmp_shift"
        android:max="10"
        android:text=" Â°C" />

    <Preference
        android:title="@string/pgsm_version"
        android:key="version" />

</PreferenceScreen>
